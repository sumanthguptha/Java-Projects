package com.zensar.training.bean;

import java.util.List;

public class StringAdderRunnable implements Runnable{
	
	List<String> list;
	
	public StringAdderRUnnable(List<String> list) {
		super();
		this.list=list;
	}

	@Override
	public void run() {
		list.add("Mumbai");
		try {
			Thread.sleep(2000);
		}catch(InterruptedException e) {
			e.printStackTrace();
		}
		list.add("Delhi");
	}

}
